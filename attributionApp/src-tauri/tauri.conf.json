{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev", 
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://192.168.1.67:8000/**",
          "http://192.168.1.67:9000/**"
        ]
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true
    },
    "security": {
      "csp": "default-src 'self' http://192.168.1.67:8000 http://192.168.1.67:9000; img-src 'self' http://192.168.1.67:8000 http://192.168.1.67:9000 data: blob:; connect-src 'self' http://192.168.1.67:8000 http://192.168.1.67:9000"
    },
    "windows": [
      {
        "title": "Музыкальный Анализатор",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ]
  }
}